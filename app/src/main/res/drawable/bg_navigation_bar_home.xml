<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/neutral_30" />
            <corners
                android:bottomLeftRadius="@dimen/card_default_corner_radius"
                android:bottomRightRadius="@dimen/card_default_corner_radius" />
        </shape>
    </item>
    <item
        android:bottom="1dp"
        android:left="1dp"
        android:right="1dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/white" />
            <corners
                android:bottomLeftRadius="@dimen/card_default_corner_radius"
                android:bottomRightRadius="@dimen/card_default_corner_radius" />
        </shape>
    </item>
</layer-list>