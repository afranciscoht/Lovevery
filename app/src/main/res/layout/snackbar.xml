<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_snackbar"
    android:paddingHorizontal="@dimen/spacing_5">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/imageView_start_icon"
        android:layout_width="@dimen/snackbar_start_icon_size"
        android:layout_height="@dimen/snackbar_start_icon_size"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@drawable/ic_filled_check"
        tools:tint="@color/green_60" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/textView_snackbar_label"
        style="@style/Lovevery.Text.Caption1Bold"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/spacing_3"
        android:layout_marginVertical="@dimen/spacing_7"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/imageView_end_icon"
        app:layout_constraintStart_toEndOf="@+id/imageView_start_icon"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_goneMarginEnd="@dimen/spacing_0"
        tools:text="Label " />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/imageView_end_icon"
        android:layout_width="@dimen/snackbar_end_icon_size"
        android:layout_height="@dimen/snackbar_end_icon_size"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@drawable/ic_filled_cancel"
        tools:tint="@color/white"
        tools:visibility="visible" />
</androidx.constraintlayout.widget.ConstraintLayout>